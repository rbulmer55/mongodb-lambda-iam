  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build2": "rm -rf dist && esbuild ./application/src/adapters/primary/**/* --format=esm --bundle --minify --sourcemap --platform=node --outdir=dist",
    "build": "rm -rf dist && node build.js",
    "preplan": "npm run build",
    "plan": "source .env && cd ./terraform/env/dev && terraform init --upgrade=true && terraform plan",
    "predeploy": "source .env && npm run plan",
    "deploy": "source .env && cd ./terraform/env/dev && terraform apply -auto-approve",
    "destroy": "source .env && cd ./terraform/env/dev && terraform destroy -auto-approve",
    "preplanDev": "npm run build",
    "planDev": "dotenv -e .env.development -- bash -c 'cd ./terraform/env/$(echo $TF_VAR_ENVIRONMENT | tr \"[:upper:]\" \"[:lower:]\") && terraform init --upgrade=true && terraform plan'",
    "predeployDev": "dotenv -e .env.development -- bash -c 'npm run planDev'",
    "deployDev": "dotenv -e .env.development -- bash -c 'cd ./terraform/env/$(echo $TF_VAR_ENVIRONMENT | tr \"[:upper:]\" \"[:lower:]\") && terraform apply -auto-approve'",
    "destroyDev": "dotenv -e .env.development -- bash -c 'cd ./terraform/env/$(echo $TF_VAR_ENVIRONMENT | tr \"[:upper:]\" \"[:lower:]\") && terraform destroy -auto-approve'"
  },
