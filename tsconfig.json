{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["es2018", "DOM"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["./application/src/functions/*"],
      "@config/*": ["./application/src/config/*"],
      "@config": ["./application/src/config/index.ts"],
      "@shared/*": ["./application/src/shared/*"],
      "@shared": ["./application/src/shared/index.ts"]
    },
    "outDir": "./dist"
  },
  "include": ["application/**/*"],
  "exclude": ["node_modules", "cdk.out"]
}
